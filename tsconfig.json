{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "target": "ES2017",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
}